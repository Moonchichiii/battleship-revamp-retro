FROM python:3.13-alpine

# Install runtime dev tools
RUN apk add --no-cache build-base gcc curl

WORKDIR /app

# Install Python packages
COPY requirements.txt ./
RUN pip install --upgrade pip && pip install --no-cache-dir -r requirements.txt

# Set environment variable for reload
ENV PYTHONUNBUFFERED=1

# Create a user for safety
RUN adduser -D appuser
USER appuser

# Copy source (used once; changes come via mounted volumes)
COPY . .

# Expose port
EXPOSE 8000

# Run app with reload in dev
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
