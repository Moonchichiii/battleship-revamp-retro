# Battleship Revamp 2025 - Environment Configuration
# Sensitive data stored in Docker secrets

# APPLICATION SETTINGS
ENVIRONMENT=development
DEBUG=true
APP_NAME=Battleship Revamp 2025
APP_VERSION=1.0.0

# Server Configuration
PORT=8000
HOST=0.0.0.0
WORKERS=2

# Security
# SECRET_KEY loaded from Docker secrets
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# DATABASE CONFIGURATION
POSTGRES_DB=battleship_revamp
POSTGRES_USER=postgres
# POSTGRES_PASSWORD loaded from Docker secrets
DATABASE_URL=postgresql://postgres@db:5432/battleship_revamp
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=1800
TEST_DATABASE_URL=postgresql://postgres@db:5432/battleship_revamp_test

# OAUTH CONFIGURATION
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback
GITHUB_SCOPES=user:email,read:user

# GAME CONFIGURATION
MAX_CONCURRENT_GAMES=100
AI_TIMEOUT_SECONDS=5
AI_DIFFICULTY_LEVELS=rookie,veteran,admiral,legendary
GAME_SESSION_TIMEOUT=3600
MOVE_TIMEOUT_SECONDS=30
MAX_GAME_DURATION=7200
BOARD_SIZE=10
SHIP_TYPES=carrier:5,battleship:4,cruiser:3,submarine:3,destroyer:2
MAX_SHIPS_PER_TYPE=1

# SESSION & CACHING
REDIS_URL=redis://redis:6379/0
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2
SESSION_TIMEOUT=86400
SESSION_REFRESH_THRESHOLD=3600
REMEMBER_ME_DURATION=2592000

# PGADMIN CONFIGURATION
PGADMIN_EMAIL=admin@battleship.dev
PGADMIN_PORT=5050
# PGADMIN_PASSWORD loaded from Docker secrets

# MONITORING & LOGGING
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_FILE=/app/logs/battleship.log
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
ENABLE_DEBUG_TOOLBAR=false
SQLALCHEMY_ECHO=false
PROFILE_REQUESTS=false

# SECURITY HEADERS & SETTINGS
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' unpkg.com; style-src 'self' 'unsafe-inline'
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
CSRF_ENABLED=true
CSRF_SECRET_KEY=auto

# DEPLOYMENT SETTINGS
CLOUD_PROVIDER=render
DEPLOYMENT_ENV=development
STATIC_FILES_DIR=/app/static
STATIC_URL_PREFIX=/static
TEMPLATES_DIR=/app/templates
AUTO_RELOAD=true
RELOAD_DIRS=/app/src,/app/templates,/app/static

# TESTING CONFIGURATION
TESTING=false
TEST_USER_EMAIL=test@battleship.dev
TEST_USER_GITHUB_ID=12345
MOCK_AI_RESPONSES=false
ENABLE_AI_LEARNING=true
ENABLE_ACHIEVEMENTS=true
ENABLE_LEADERBOARDS=true
ENABLE_SPECTATOR_MODE=false

# DOCKER ENVIRONMENT VARIABLES
CONTAINER_USER=appuser
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
PYTHONPATH=/app
COMPOSE_PROJECT_NAME=battleship_revamp
COMPOSE_FILE=docker-compose.yml

# DEVELOPMENT HELPERS
WATCHDOG_ENABLED=true
RELOAD_INCLUDES=*.py,*.html,*.css,*.js
RELOAD_EXCLUDES=*.pyc,__pycache__,*.log
FRONTEND_DEV_MODE=true
LIVERELOAD_ENABLED=true
BROWSER_SYNC_ENABLED=false

# ENVIRONMENT VALIDATION
# Required Variables:
# - GITHUB_CLIENT_ID
# - GITHUB_CLIENT_SECRET
# - SECRET_KEY (via Docker secret)
# - POSTGRES_PASSWORD (via Docker secret)
# - PGADMIN_PASSWORD (via Docker secret)
